{% extends 'base.html.twig' %}

{% block title %}Influencer's Article{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card mb-4">
            <div class="card-footer text-muted m-0 p-0">
                <div class="card-header row m-0 ">
                    <div class="col-6 d-flex justify-content-start inline-block">
                        {{ article.author.name }}
                    </div>
                    <div class="col-6 d-flex justify-content-end inline-block">
                        {{ article.date|date("Y/m/d") }}
                    </div>
                </div>
            </div>

            <div class="card-body">
                <h2 class="card-title text-center">{{ article.title }}</h2>
                {% if article.image != null %}
                    <img class="card-img-top" src="{{ asset('images/' ~  article.image ) }}"
                         alt="Something is not right">
                {% endif %}
                <p class="card-text ">{{ article.content }}</p>

                <div class=" row m-0 ">
                    <div class="col-6 d-flex justify-content-start inline-block">
                        <a href="/" class="btn btn-primary">Back</a>
                    </div>
                    <div class="col-6 d-flex justify-content-end inline-block">

                        {% if app.request.cookies.has(article.id) %}

                            <a href="/{{ article.id }}" class="btn btn-primary disabled">Like</a>

                            <a href="/{{ article.id }}" class="btn disabled">{{ article.votes }}</a>
                        {% else %}

                            <a href="/{{ article.id }}" class="btn btn-primary">Like</a>
                            <a href="/{{ article.id }}" class="btn disabled">{{ article.votes }}</a>
                        {% endif %}
                    </div>
                </div>
            <div class="row m-0" >
                <div class="col d-flex justify-content-center inline-block">
                    <a href="/edit/{{ article.id }}" class="btn btn-primary">Edit</a>
                </div>
            </div>
            </div>
        </div>
    </div>
{% endblock %}

